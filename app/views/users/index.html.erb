<h1>Users</h1>

<p><a href="/new_user">Add a New User</a></p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          
          <td><a href="/users/<%= user.id %>">Show</a>
        </td>
      <% if session["user_id"] == 11 || session["user_id"]==user.id  %>
      <td><a href="/users/<%= user.id %>/edit">Edit</a></td>
      <td><a href="/users/<%= user.id %>/destroy">Destroy</a></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

